<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductJudgeMobile.Features.NewProduct.NewProductPage"
             xmlns:local="clr-namespace:ProductJudgeMobile.Features.NewProduct"
             x:DataType="local:NewProductViewModel"
             Title="NewProductPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="10"
            Spacing="15">

            <Label
                Text="Nombre del Producto"
                FontSize="16"
                FontAttributes="Bold" />
            <Entry
                Placeholder="Ingresa el nombre"
                Text="{Binding ProductName}" />

            <Label
                Text="Descripción del Producto"
                FontSize="16"
                FontAttributes="Bold" />
            <Editor
                Placeholder="Ingresa la descripción"
                Text="{Binding ProductDescription}"
                HeightRequest="100" />

            <VerticalStackLayout>
                <Grid ColumnDefinitions="auto, *">
                    <Label
                        Text="Imagenes"
                        FontSize="16"
                        VerticalOptions="Center"
                        FontAttributes="Bold" />

                    <Button
                        Grid.Column="1"
                        HorizontalOptions="End"
                        Command="{Binding CaptureImageCommand}"
                        Text="Add Image" 
                        VerticalOptions="Center"/>
                </Grid>
                

                <CollectionView
                    ItemsLayout="HorizontalList"
                    ItemsSource="{Binding Images}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                StrokeThickness="0"
                                Margin="0,0,8,0"
                                StrokeShape="RoundRectangle 8"
                                Background="#2B0B98"
                                Padding="0"
                                HeightRequest="200"
                                VerticalOptions="Center"
                                HorizontalOptions="Center">
                                <Image
                                    Source="{Binding .}"
                                    Aspect="AspectFit" />
                            </Border>
                       
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>

            <Button
                Text="Crear Producto"
                Command="{Binding CreateProductCommand}"
                BackgroundColor="LightGreen"
                TextColor="White"
                FontAttributes="Bold"
                CornerRadius="10"
                HorizontalOptions="Center"
                Padding="10,5" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>