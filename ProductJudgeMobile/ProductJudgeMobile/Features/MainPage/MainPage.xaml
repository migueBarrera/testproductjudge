<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ProductJudgeMobile.Features.MainPage"
             x:DataType="local:MainViewModel"
    x:Class="ProductJudgeMobile.Features.MainPage.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            VerticalOptions="Center"
            Spacing="25">
          <Button Text="Añadir producto" Command="{Binding AddProductCommand}"/>
          <Button Text="Comprobar producto" Command="{Binding CheckProductCommand}"/>
          <Button Text="Lista de productos" Command="{Binding ListProductsCommand}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
